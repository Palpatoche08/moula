<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"/>


    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="40dp"
        android:text="Welcome On Moula!"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="40sp" />

    <Button
        android:id="@+id/admin_button"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:text="Admin"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/admin_button"
        tools:ignore="UnknownId"
        android:backgroundTint="@color/white"
        tools:visibility="visible"
        android:textColor="#3B84F1" />

    <Button
        android:id="@+id/currencies_button"
        android:layout_width="355dp"
        android:layout_height="83dp"
        android:layout_below="@id/welcome_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:padding="18dp"
        android:text="@string/see_currencies"
        android:textColor="#3B84F1" />

    <Button
        android:id="@+id/transactions_button"
        android:layout_width="355dp"
        android:layout_height="83dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/white"
        android:text="@string/transactions"
        android:layout_below="@id/currencies_button"
        android:textColor="#3B84F1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/white"
        android:textColor="#3B84F1"/>

</RelativeLayout>